<%= form_with(model: project, local: true, class: "col-md-4 col-xs-10" ) do |form| %>
  <%= image_tag("showks.png", width: "100%") %>
  <h1 class="h3 mb-3 font-weight-normal">Create new project</h1>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Usernameに使用可能な文字は半角英小文字/数字/ハイフンです。</p>
  <div class="field">
    <%= form.label(:username, class: "sr-only") %>
    <%= form.text_field(:username, class: "form-control", placeholder: "Username", required: true, autofocus: true) %>
  </div>
  <div class="field">
    <%= form.label(:password, class: "sr-only") %>
    <%= form.password_field(:password, class: "form-control", placeholder: "Password", required: true) %>
  </div>
  <div class="field">
    <%= form.label(:github_id, class: "sr-only") %>
    <%= form.text_field(:github_id, class: "form-control", placeholder: "GitHub ID", required: true) %>
  </div>
  <div class="field">
    <%= form.label(:twitter_id, class: "sr-only") %>
    <%= form.text_field(:twitter_id, class: "form-control", placeholder: "Twitter ID") %>
  </div>
  <div class="field">
    <%= form.label(:comment, class: "sr-only") %>
    <%= form.text_field(:comment, class: "form-control", placeholder: "Comment") %>
  </div>
  <div class="checkbox mb-3">
    <div class="actions">
    <%= form.submit(class: "btn btn-lg btn-primary btn-block")%>
    </div>
  </div>
<% end %>
